<h2><%= @heading  %></h2>

<p><%= @story %></p>

<div class="row">
  <div class="medium-12 large-12 columns">
    <button class="button expand" type="button" onClick="window.location.href=window.location.href">New User Story</button>
  </div>
</div>
<div class="row">
  <div class="medium-12 large-12 columns">
    <form action='/stories' method='POST'>
      <input id="story" type="hidden" name="story" value= "<%= @story %>" >
      <input id="category" type="hidden" name="category" value= "<%= @category.id %>" >
      <button class="button expand" type='submit'>Save Story</button>
    </form>
  </div>
</div>
